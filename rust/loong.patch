+  mkdir -pv usr/lib/rustlib/$(uname -m)-unknown-linux-gnu/bin/gcc-ld
+  ln -srvf  usr/bin/lld          usr/lib/rustlib/$(uname -m)-unknown-linux-gnu/bin/rust-lld
+  ln -srvf  usr/bin/llvm-objcopy usr/lib/rustlib/$(uname -m)-unknown-linux-gnu/bin/rust-objcopy
+  ln -srvft usr/lib/rustlib/$(uname -m)-unknown-linux-gnu/bin/gcc-ld usr/bin/{ld.lld,ld64.lld,lld-link,wasm-ld}
 
